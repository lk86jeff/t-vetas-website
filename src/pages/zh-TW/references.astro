---
import Layout from '../../layouts/Layout.astro';
import referencesData from '../../data/references.json';

const { years } = referencesData;
const yearList = Object.keys(years).sort((a, b) => b - a);

function groupByCategory(projects) {
    return projects.reduce((acc, project) => {
        const category = project.category['zh-TW'];
        if (!acc[category]) {
            acc[category] = [];
        }
        acc[category].push(project);
        return acc;
    }, {});
}

// 定義類別顏色映射
const categoryColors = {
    "大型數據中心專案": {
        border: "#44B3FF",
        background: "#f0f9ff"
    },
    "光傳輸設備專案": {
        border: "#48BB78",
        background: "#f0fff4"
    },
    "CLS海纜登陸站基礎建設": {
        border: "#ED8936",
        background: "#fffaf0"
    },
    "現場支援與維護": {
        border: "#9F7AEA",
        background: "#faf5ff"
    },
    "電信／企業網路升級與其他": {
        border: "#ECC94B",
        background: "#fffff0"
    }
};

---

<Layout title="實績案例" description="T-Vetas Network 的專案實績與參考案例" lang="zh-TW">
    <div class="references-container">
        <h1 class="page-title">實績案例</h1>
        
        {yearList.map(year => {
            const groupedProjects = groupByCategory(years[year]);
            return (
                <section class="year-section">
                    <h2 class="year-title">{year}</h2>
                    <div class="references-grid">
                        {Object.entries(groupedProjects).map(([category, projects]) => (
                            <article 
                                class="reference-card" 
                                style={`
                                    border-top: 4px solid ${categoryColors[category].border};
                                    background: linear-gradient(to bottom right, white, ${categoryColors[category].background})
                                `}
                            >
                                <h3 class="category-title">{category}</h3>
                                <ul class="project-list">
                                    {projects.map((project) => (
                                        <li class="project-item">
                                            {project.customer} {project.title['zh-TW']}
                                        </li>
                                    ))}
                                </ul>
                            </article>
                        ))}
                    </div>
                </section>
            );
        })}
    </div>
</Layout>

<style>
.references-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
}

.page-title {
    font-size: 1.75rem;
    font-weight: 600;
    color: #1A2A47;
    margin-bottom: 2rem;
    text-align: center;
}

.year-section {
    margin-bottom: 5rem;  /* 從 3rem 增加到 5rem */
}

.year-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #2D3748;
    margin: 3rem 0 2rem;  /* 上方增加間距 */
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #EDF2F7;
}

/* 第一個年份標題不需要上方間距 */
.year-section:first-child .year-title {
    margin-top: 0;
}

.references-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
}

.reference-card {
    padding: 1.8rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
    position: relative;
    overflow: hidden;
}

.reference-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 20px -3px rgba(0, 0, 0, 0.15);
}

.category-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2D3748;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #EDF2F7;
}

.project-list {
    list-style-type: disc;
    padding-left: 1.25rem;
}

.project-item {
    color: #4A5568;
    font-size: 0.95rem;
    line-height: 1.6;
    padding: 0.5rem 0;
}

@media (max-width: 768px) {
    .references-container {
        padding: 1rem;
    }
    
    .references-grid {
        grid-template-columns: 1fr;
    }
}
</style>