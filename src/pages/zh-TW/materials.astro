<Layout title="物料供應" description="主要合作物料品牌與簡介" lang="zh-TW">
  <div class="materials-container">
    <h1 class="page-title">物料供應</h1>
    <div class="materials-list">
      {materials.map(mat => (
        <section id={mat.id} class="material-card">
          <h2>{mat.name}</h2>
          <p>{mat.desc}</p>
          {mat.details && (
            <ul class="accordion-list">
              {mat.details.map(detail => (
                <li class="accordion-item">
                  <button class="accordion-btn" type="button" aria-expanded="false">
                    <span class="triangle"></span>
                    {detail.category}
                  </button>
                  <ul class="accordion-content" style="display:none;">
                    {detail.items.map(item => <li>{item}</li>)}
                  </ul>
                </li>
              ))}
            </ul>
          )}
        </section>
      ))}
    </div>
  </div>
  <script type="text/javascript" is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.accordion-btn').forEach(btn => {
        btn.addEventListener('click', function() {
          const content = this.nextElementSibling;
          const triangle = this.querySelector('.triangle');
          const expanded = this.getAttribute('aria-expanded') === 'true';
          this.setAttribute('aria-expanded', !expanded);
          if (expanded) {
            content.style.display = 'none';
            triangle.classList.remove('open');
          } else {
            content.style.display = 'block';
            triangle.classList.add('open');
          }
        });
      });
    });
  </script>
</Layout>

<style>
.materials-container {
  max-width: 900px;
